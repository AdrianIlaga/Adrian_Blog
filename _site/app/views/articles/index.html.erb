<table>

    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.body %></td>
                <td>
                    <%= link_to 'View', show_article_path(article) %>
                    <%= link_to 'Edit', edit_article_path(article) %>
                    <%= link_to 'Delete', delete_article_path(article),
                                          method: :delete, 
                                          data: { confirm: "Are you sure?" }
                    %>
                </td>
            </tr>
        <% end %>
    </tbody>

</table>

<%= link_to 'New Article', new_article_path %>
